<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CalculadoraIMCApp.ViewModels"
             x:Class="CalculadoraIMCApp.Views.MainPage"
             Title="Calculadora IMC">
    <ContentPage.BindingContext>
        <viewmodels:IMCViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">
            <Label Text="Calculadora de IMC" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Peso (kg)" />
            <Entry Text="{Binding WeightKg, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Ej. 70" />

            <Label Text="Altura (m)" />
            <Entry Text="{Binding HeightMeters, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Ej. 1.75" />

            <HorizontalStackLayout Spacing="12">
                <Button Text="Calcular" Command="{Binding CalculateIMCCommand}" />
                <Button Text="Limpiar" Command="{Binding ClearCommand}" />
            </HorizontalStackLayout>

            <Frame CornerRadius="10" Padding="12" HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Resultado" FontAttributes="Bold" />
                    <Label Text="{Binding Imc, StringFormat='IMC: {0:F2}'}" FontSize="20" />
                    <Label Text="{Binding Range}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
